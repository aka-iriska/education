<% provide(:title, "Sign in") %>
<h1><%= t(:sign_in) %></h1>

<div class="row">
  <div>
    <%= form_for(:session, url: sessions_path) do |f| %>
      <div class="mb-3">
        <%= f.label :email %>
        <%= f.text_field :email, class: "form-control", required: true %>
      </div>

      <div class="mb-1">
        <%= f.label :password, t(:password) %>
        <%= f.password_field :password, minlength: 4, class: "form-control", required: true %>
      </div>

      <%= f.submit t(:login), name: "login_btn", class: "btn btn-large btn-primary mt-4" %>
    <% end %>

    <div class="mt-3">
      <p class="text-xl-start text-wrap"><%= t(:not_registered_yet) %> <%= link_to t(:sign_up_now), signup_path %></p>
    </div>
  </div>
</div>
