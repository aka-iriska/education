<% provide(:title, 'Sign up') %>
<h1><%= t(:sign_up) %></h1>

<div class="row">
  <div>
    <%= form_for(@user) do |f| %>

      <div class="mb-3">
        <%= f.label :name, t(:name) %>
        <%= f.text_field :name, class: "form-control", required: true %>
      </div>

      <div class="mb-3">
        <%= f.label :email %>
        <%= f.email_field :email, class: "form-control", required: true %>
      </div>

      <div class="mb-3">
        <%= f.label :password, t(:password) %>
        <%= f.password_field :password, class: "form-control", required: true %>
      </div>

      <div class="mb-3">
        <%= f.label :password_confirmation, t(:confirm_password) %>
        <%= f.password_field :password_confirmation, minlength: 4, class: "form-control", suggested: "new-password", required: true %>
      </div>

      <%= f.submit t(:sign_up), class: "btn btn-large btn-primary mt-4" %>
    <% end %>

    <div class="mt-3">
      <p class="text-xl-start text-wrap"><%= t(:already_signup) %> <%= link_to t(:login), signin_path %></p>
    </div>
  </div>
</div>
